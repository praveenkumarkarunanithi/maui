<?xml version="1.0" encoding="utf-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestZone.Test.Views.ScrollRepere"
             Margin="{OnPlatform Android='0,0,0,0', iOS='0,0,0,0'}"
             x:Name="scrollRepere"
             
             >
    <ContentView.Content>
        <HorizontalStackLayout x:Name="_stack"  VerticalOptions="Center" Spacing="0">
            <Label Text="{Binding LineWidth, Source={x:Reference scrollRepere}}" TextColor="White"/>
        </HorizontalStackLayout>
    </ContentView.Content>
</ContentView>